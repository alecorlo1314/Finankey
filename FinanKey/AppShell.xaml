<?xml version="1.0" encoding="UTF-8" ?>
<simpleShell:SimpleShell
    x:Class="FinanKey.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:FinanKey.View.Controles"
    xmlns:local="clr-namespace:FinanKey"
    xmlns:simpleShell="clr-namespace:SimpleToolkit.SimpleShell;assembly=SimpleToolkit.SimpleShell">

    <TabBar x:Name="tabBar" />

    <simpleShell:SimpleShell.RootPageContainer>
        <Grid>
            <simpleShell:SimpleNavigationHost x:Name="paginaContenedor" />
            <controls:TabBarView
                x:Name="tabBarView"
                CurrentPageSelectionChanged="TabBarViewCurrentPageChanged"
                HorizontalOptions="Fill"
                VerticalOptions="End" />
        </Grid>
    </simpleShell:SimpleShell.RootPageContainer>
</simpleShell:SimpleShell>
