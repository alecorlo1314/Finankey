            <!--  Grupo botones  -->
            <Style x:Key="grupoBotones" TargetType="Button">
                <Setter Property="Padding" Value="12" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontFamily" Value="PoppinsMedium" />
                <Setter Property="TextColor" Value="{StaticResource ColorTextoPrimario}" />
                <Setter Property="WidthRequest" Value="115" />
                <Setter Property="HeightRequest" Value="50" />
            </Style>

            <!--  subtitulos de formularios  -->
            <Style x:Key="subtitulosFormularios" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsMedium" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="{StaticResource ColorTextoSecundario}" />
