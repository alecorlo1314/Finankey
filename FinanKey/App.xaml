            <!--  ESPACIADOS  -->
            <Thickness x:Key="PaddingPaginas">16,40</Thickness>
            <Thickness x:Key="CardPadding">20,12</Thickness>
            <!--  ESTILO DE FORMULARIOS  -->
            <Style x:Key="entradaFormulario" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="FontFamily" Value="PoppinsRegular" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="TextColor" Value="{StaticResource ColorTexoEntrada}" />
                <Setter Property="PlaceholderColor" Value="{StaticResource ColorTextosDescriptivos}" />
            </Style>
            <!--  BORDE DE FORMULARIOS  -->
            <Style x:Key="bordeFormulario" TargetType="Border">
                <Setter Property="Padding" Value="10,0" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="BackgroundColor" Value="{StaticResource ColorFondoComponentes}" />
                <Setter Property="Stroke" Value="Transparent" />
                <Setter Property="HeightRequest" Value="52" />
            </Style>
            <!--  ESTILOS BOTONES  -->
            <Style x:Key="botonPrimario" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource ColorCascaraNaranja}" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="WidthRequest" Value="380" />
                <Setter Property="HeightRequest" Value="48" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontFamily" Value="PoppinsBold" />
                <Setter Property="FontSize" Value="16" />
