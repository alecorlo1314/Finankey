            <simpleCore:PathGeometryExtension x:Key="RutaFinanzasGeometry" Path="{StaticResource RutaFinanzas}" />
            <simpleCore:PathGeometryExtension x:Key="RutaAnadirGeometry" Path="{StaticResource RutaAnadir}" />
            <simpleCore:PathGeometryExtension x:Key="RutaReportesGeometry" Path="{StaticResource RutaReportes}" />
            <simpleCore:PathGeometryExtension x:Key="RutaConfiguracionGeometry" Path="{StaticResource RutaConfiguracion}" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>