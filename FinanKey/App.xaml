            <Color x:Key="BalanceCardBg">#d1fae5</Color>
            <Color x:Key="CuentaCardBg">#bae6fd</Color>

            <Color x:Key="TextSecondary">#64748b</Color>

            <!--  Estilos de Label  -->
            <Style x:Key="TitleLabel" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsBold" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="TextColor" Value="{StaticResource ColorTexoEntrada}" />
            </Style>
            <Style x:Key="SubtitleLabel" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsRegular" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
