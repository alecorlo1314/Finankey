<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="FinanKey.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FinanKey"
    xmlns:simpleCore="clr-namespace:SimpleToolkit.Core.MarkupExtensions;assembly=SimpleToolkit.Core"
    xmlns:vm="clr-namespace:FinanKey.ViewModels">

    <Application.Resources>
        <ResourceDictionary>
            <!--  PALETA DE COLORES  -->
            <Color x:Key="ColorFondoPrincipal">#F8FAFC</Color>
            <Color x:Key="ColorFondoComponentes">#FFFFFF</Color>
            <Color x:Key="ColorAzulPricipal">#2A218A</Color>
            <Color x:Key="ColorAzulPrincipalSuave">#E4E7FC</Color>
            <Color x:Key="ColorMorado">#693596</Color>
            <Color x:Key="ColorMoradoSuave">#EADFF4</Color>
            <Color x:Key="ColorCascaraNaranja">#FAA538</Color>
            <Color x:Key="ColorCascaraNaranjaSuave">#FFECD4</Color>
            <Color x:Key="ColorMagenta">#FA288A</Color>
            <Color x:Key="ColorMagentaSuave">#FED1E6</Color>
            <Color x:Key="ColorAzulMarino">#253FE4</Color>
            <Color x:Key="ColorAzulMarinoSuave">#E4E7FC</Color>
            <Color x:Key="ColorTextosDescriptivos">#475569</Color>
            <Color x:Key="ColorTexoEntrada">#0f172a</Color>

            <!--  ESTILOS DE TIPOGRAFIA  -->
            <Style x:Key="TextoTituloPrincipal" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsBold" />
                <Setter Property="FontSize" Value="24" />
            </Style>
            <Style x:Key="TextoMontoTarjeta" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsRegular" />
                <Setter Property="FontSize" Value="28" />
            </Style>
            <Style x:Key="TextoSubtítulo" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsSemibold" />
                <Setter Property="FontSize" Value="20" />
            </Style>
            <Style x:Key="TextoEncabezadoSecundario" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsSemibold" />
                <Setter Property="FontSize" Value="18" />
            </Style>
            <Style x:Key="TextoParrafoPrincipal" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsRegular" />
                <Setter Property="FontSize" Value="16" />
            </Style>
            <Style x:Key="TextoSecundario" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsRegular" />
                <Setter Property="FontSize" Value="14" />
            </Style>
            <Style x:Key="TextoLabelInputMenusPequeños" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsLight" />
                <Setter Property="FontSize" Value="12" />
            </Style>
            <Style x:Key="TextoBotonGrande" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsBold" />
                <Setter Property="FontSize" Value="16" />
            </Style>
            <Style x:Key="TextoBotonPequeno" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsBold" />
                <Setter Property="FontSize" Value="14" />
            </Style>
            <!--  ESPACIADOS  -->
            <Thickness x:Key="PaddingPaginas">16,48</Thickness>
            <Thickness x:Key="CardPadding">20,12</Thickness>
            <!--  ESTILO DE FORMULARIOS  -->
            <Style x:Key="entradaFormulario" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="FontFamily" Value="PoppinsRegular" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="TextColor" Value="{StaticResource ColorTexoEntrada}" />
                <Setter Property="PlaceholderColor" Value="{StaticResource ColorTextosDescriptivos}" />
            </Style>
            <!--  BORDE DE FORMULARIOS  -->
            <Style x:Key="bordeFormulario" TargetType="Border">
                <Setter Property="Padding" Value="10,0" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="BackgroundColor" Value="{StaticResource ColorFondoComponentes}" />
                <Setter Property="Stroke" Value="Transparent" />
                <Setter Property="HeightRequest" Value="52" />
            </Style>
            <!--ESTILOS BOTONES-->
            <Style x:Key="botonPrimario" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource ColorCascaraNaranja}" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="WidthRequest" Value="380"/>
                <Setter Property="HeightRequest" Value="48"/>
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontFamily" Value="PoppinsBold" />
                <Setter Property="FontSize" Value="16" />
            </Style>

            <Color x:Key="ColorTexto">#0F1724</Color>
            <Color x:Key="ColorCardMorado">#4034AB</Color>
            <Color x:Key="ColorAcentoCyan">#34C3D6</Color>
            <Color x:Key="ColorAcentoRojo">#FF4D6D</Color>
            <Color x:Key="ColorAcentoAmber">#FFB400</Color>
            <Color x:Key="ColorMuteado">#9AA4B2</Color>

            <SolidColorBrush x:Key="PincelFondoPrincipal" Color="{StaticResource ColorFondoPrincipal}" />
            <SolidColorBrush x:Key="BrushText" Color="{StaticResource ColorTexto}" />
            <SolidColorBrush x:Key="BrushCardPurple" Color="{StaticResource ColorCardMorado}" />
            <SolidColorBrush x:Key="BrushAccentCyan" Color="{StaticResource ColorAcentoCyan}" />
            <SolidColorBrush x:Key="BrushAccentRed" Color="{StaticResource ColorAcentoRojo}" />
            <SolidColorBrush x:Key="BrushAccentAmber" Color="{StaticResource ColorAcentoAmber}" />
            <SolidColorBrush x:Key="BrushMuted" Color="{StaticResource ColorMuteado}" />

            <Color x:Key="VentanaEmergente">#ffffff</Color>
            <Color x:Key="TextoVentanaEmergente">#0d0c0f</Color>
            <Color x:Key="TextoPrimario">#ffffff</Color>
            <Color x:Key="Secundario">#f1f3f8</Color>
            <Color x:Key="Suave">#f1f3f8</Color>
            <Color x:Key="TextoSuave">#6b7a99</Color>
            <Color x:Key="Acento">#ff4576</Color>
            <Color x:Key="TextoAcento">#1a030d</Color>
            <Color x:Key="Peligro">#e54848</Color>
            <Color x:Key="TextoPeligro">#f7f7f9</Color>
            <Color x:Key="Borde">#e5e7eb</Color>
            <Color x:Key="Entrada">#e5e7eb</Color>
            <Color x:Key="Anillo">#6b4eff</Color>

            <!--  Nueva paleta de colores  -->
            <Color x:Key="FondoPrincipal">#F7FAFC</Color>
            <Color x:Key="ColorTarjeta">#ffffff</Color>
            <Color x:Key="ColorAcento">#2F2762</Color>
            <Color x:Key="ColorTextoPrimario">#000000</Color>
            <Color x:Key="ColorTextoSecundario">#818181</Color>
            <Color x:Key="ColorInconoNoSelected">#B3B3B3</Color>
            <Color x:Key="ColorInconoSelected">#7A69EE</Color>
            <Color x:Key="ColorAcentoTarjetaIncome">#DAF0F6</Color>
            <Color x:Key="ColorAcentoTarjetaExpense">#FCD2DF</Color>
            <Color x:Key="ColorFondoMoradoSuave">#DCDFF0</Color>
            <Color x:Key="ColorAcento1">#EE1E5F</Color>
            <Color x:Key="ColorAcento2">#47B6D4</Color>
            <Color x:Key="ColorAcento3">#EBA90D</Color>
            <Color x:Key="ColorAcentoSuave4">#FEF0D0</Color>

            <!--  Grupo botones  -->
            <Style x:Key="grupoBotones" TargetType="Button">
                <Setter Property="Padding" Value="12" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontFamily" Value="PoppinsMedium" />
                <Setter Property="TextColor" Value="{StaticResource ColorTextoPrimario}" />
                <Setter Property="WidthRequest" Value="115" />
                <Setter Property="HeightRequest" Value="50" />
            </Style>

            <!--  subtitulos de formularios  -->
            <Style x:Key="subtitulosFormularios" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsMedium" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="{StaticResource ColorTextoSecundario}" />
            </Style>

            <!--  Colores  -->
            <Color x:Key="PrimaryColor">#0ea5e9</Color>
            <Color x:Key="SecondaryColor">#5eead4</Color>
            <Color x:Key="BalanceCardBg">#d1fae5</Color>
            <Color x:Key="CuentaCardBg">#bae6fd</Color>

            <Color x:Key="TextSecondary">#64748b</Color>

            <!--  Estilos de Label  -->
            <Style x:Key="TitleLabel" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsBold" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="TextColor" Value="{StaticResource ColorTexoEntrada}" />
            </Style>
            <Style x:Key="SubtitleLabel" TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsRegular" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
            </Style>

