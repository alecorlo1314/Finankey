<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FinanKey.Presentacion.View.ReportesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Padding="{StaticResource PaddingPaginas}"
    Background="#ffffff"
    Shell.NavBarIsVisible="False">

    <!--  Cambio de color de la barra  -->
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource FondoPrincipal}" StatusBarStyle="DarkContent" />
    </ContentPage.Behaviors>
    <VerticalStackLayout>
        <Label
            FontFamily="RobotoBold"
            FontSize="28"
            HorizontalOptions="Center"
            Text="PAGINA FINZANZAS"
            TextColor="Black"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>