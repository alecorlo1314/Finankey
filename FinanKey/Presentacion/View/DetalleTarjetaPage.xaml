<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FinanKey.Presentacion.View.DetalleTarjetaPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Detalle de Tarjeta"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    BackgroundColor="{StaticResource FondoPrincipal}">

    <!--  CAMBIO COLOR DE BARRA  -->
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource FondoPrincipal}" StatusBarStyle="DarkContent" />
    </ContentPage.Behaviors>
    
    
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Pagina de detalle de tarjeta"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>