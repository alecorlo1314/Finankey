<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FinanKey.Presentacion.View.DetalleTarjetaPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sfPopup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Detalle de Tarjeta"
    BackgroundColor="{StaticResource FondoPrincipal}">

    <!--  CAMBIO COLOR DE BARRA  -->
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource FondoPrincipal}" StatusBarStyle="DarkContent" />
    </ContentPage.Behaviors>

    <!--  CONTENIDO PRINCIPAL  -->
    <Grid
        Margin="0,16"
        RowDefinitions="Auto, Auto, *"
        RowSpacing="16">
        <!--  VENTANA EMERGENTE CONFIRMACION DE ELIMINACION  -->
        <sfPopup:SfPopup
            Padding="16"
            AutoSizeMode="Height"
            BackgroundColor="Transparent"
            HorizontalOptions="Center"
            IsOpen="{Binding PopupEliminacionAbierto}"
            ShowCloseButton="False"
            ShowFooter="True"
            ShowHeader="True"
            WidthRequest="380">
            <sfPopup:SfPopup.PopupStyle>
                <sfPopup:PopupStyle
                    FooterBackground="{StaticResource ColorFondoComponentes}"
                    HeaderBackground="{StaticResource ColorFondoComponentes}"
                    MessageBackground="{StaticResource ColorFondoComponentes}" />
            </sfPopup:SfPopup.PopupStyle>
            <sfPopup:SfPopup.HeaderTemplate>
                <DataTemplate>
                    <Label
                        Margin="16,16,0,0"
                        HorizontalOptions="Start"
                        Style="{StaticResource TextoEncabezadoSecundario}"
                        Text="¿Estás seguro?"
                        TextColor="{StaticResource ColorTexto}" />
                </DataTemplate>
            </sfPopup:SfPopup.HeaderTemplate>
            <sfPopup:SfPopup.ContentTemplate>
                <DataTemplate>
                    <Label
                        Margin="16,0"
                        HorizontalOptions="Start"
                        Style="{StaticResource TextoParrafoPrincipal}"
                        Text="Esta acción no se puede deshacer. Esto eliminará permanentemente la tarjeta y sus datos asociados."
                        TextColor="{StaticResource Secundario}" />
                </DataTemplate>
            </sfPopup:SfPopup.ContentTemplate>
            <sfPopup:SfPopup.FooterTemplate>
                <DataTemplate>
                    <HorizontalStackLayout
                        Margin="0,0,16,16"
                        HorizontalOptions="End"
                        Spacing="8">
                        <Button
                            BackgroundColor="{StaticResource ColorFondoPrincipal}"
                            Command="{Binding CancelarEliminacionTarjetaCommand}"
                            CornerRadius="10"
                            FontFamily="PoppinsBold"
                            FontSize="14"
                            HeightRequest="42"
                            HorizontalOptions="End"
                            Text="Cancelar"
                            TextColor="{StaticResource ColorAzulPricipal}" />
                        <Button
                            BackgroundColor="{StaticResource ColorAzulPricipal}"
                            Command="{Binding ConfirmarEliminacionTarjetaCommand}"
                            CornerRadius="10"
                            FontFamily="PoppinsBold"
                            FontSize="14"
                            HeightRequest="42"
                            HorizontalOptions="End"
                            Text="Eliminar"
                            TextColor="{StaticResource ColorFondoComponentes}" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </sfPopup:SfPopup.FooterTemplate>
        </sfPopup:SfPopup>

        <!--  VENTANA EMERGENTE MENSAJE DE INFORMACIÓN  -->
        <sfPopup:SfPopup
            Padding="16"
            AutoSizeMode="Height"
            BackgroundColor="Transparent"
            FooterHeight="57"
            HeaderTitle="57"
            HeightRequest="180"
            HorizontalOptions="Center"
            IsOpen="{Binding PopupInformacionAbierto}"
            ShowCloseButton="False"
            ShowFooter="True"
            ShowHeader="True"
            WidthRequest="380">
            <sfPopup:SfPopup.PopupStyle>
                <sfPopup:PopupStyle
                    FooterBackground="{StaticResource ColorFondoComponentes}"
                    HeaderBackground="{StaticResource ColorFondoComponentes}"
                    MessageBackground="{StaticResource ColorFondoComponentes}" />
            </sfPopup:SfPopup.PopupStyle>
            <sfPopup:SfPopup.HeaderTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Margin="16,16,0,0">
                        <Label
                            Style="{StaticResource TextoEncabezadoSecundario}"
                            Text="{Binding TituloInformacion}"
                            TextColor="{StaticResource ColorTexto}" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </sfPopup:SfPopup.HeaderTemplate>
            <sfPopup:SfPopup.ContentTemplate>
                <DataTemplate>
                    <Label
                        Margin="16,0"
                        HorizontalOptions="Start"
                        Style="{StaticResource TextoParrafoPrincipal}"
                        Text="{Binding MensajeInformacion}"
                        TextColor="{StaticResource Secundario}" />
                </DataTemplate>
            </sfPopup:SfPopup.ContentTemplate>
            <sfPopup:SfPopup.FooterTemplate>
                <DataTemplate>
                    <Button
                        Margin="0,0,16,16"
                        BackgroundColor="{StaticResource ColorFondoPrincipal}"
                        Command="{Binding CerrarPopInformacionCommand}"
                        CornerRadius="10"
                        FontFamily="PoppinsBold"
                        FontSize="14"
                        HeightRequest="42"
                        HorizontalOptions="End"
                        Text="OK"
                        TextColor="{StaticResource ColorAzulPricipal}" />
                </DataTemplate>
            </sfPopup:SfPopup.FooterTemplate>
        </sfPopup:SfPopup>

        <!--  VENTANA EMERGENTE MENSAJE DE ERROR  -->
        <sfPopup:SfPopup
            Padding="16"
            AutoSizeMode="Height"
            BackgroundColor="Transparent"
            FooterHeight="52"
            HeaderTitle="52"
            HorizontalOptions="Center"
            IsOpen="{Binding PopupErrorAbierto}"
            ShowCloseButton="False"
            ShowFooter="True"
            ShowHeader="True"
            WidthRequest="380">
            <sfPopup:SfPopup.PopupStyle>
                <sfPopup:PopupStyle
                    FooterBackground="{StaticResource ColorFondoComponentes}"
                    HeaderBackground="{StaticResource ColorFondoComponentes}"
                    MessageBackground="{StaticResource ColorFondoComponentes}" />
            </sfPopup:SfPopup.PopupStyle>
            <sfPopup:SfPopup.HeaderTemplate>
                <DataTemplate>
                    <Image
                        Margin="16,16,0,0"
                        Aspect="AspectFit"
                        Source="icono_error.svg" />
                </DataTemplate>
            </sfPopup:SfPopup.HeaderTemplate>
            <sfPopup:SfPopup.ContentTemplate>
                <DataTemplate>
                    <VerticalStackLayout Spacing="8">
                        <Label
                            Margin="16,0"
                            HorizontalOptions="Start"
                            Style="{StaticResource TextoEncabezadoSecundario}"
                            Text="{Binding TituloError}"
                            TextColor="{StaticResource ColorTexto}" />
                        <Label
                            Margin="16,0"
                            HorizontalOptions="Start"
                            Style="{StaticResource TextoParrafoPrincipal}"
                            Text="{Binding MensajeError}"
                            TextColor="{StaticResource Secundario}" />
                    </VerticalStackLayout>
                </DataTemplate>
            </sfPopup:SfPopup.ContentTemplate>
            <sfPopup:SfPopup.FooterTemplate>
                <DataTemplate>
                    <Button
                        Margin="0,0,16,16"
                        BackgroundColor="{StaticResource ColorFondoPrincipal}"
                        Command="{Binding CerrarPopErrorCommand}"
                        CornerRadius="10"
                        FontFamily="PoppinsBold"
                        FontSize="14"
                        HeightRequest="42"
                        HorizontalOptions="End"
                        Text="OK"
                        TextColor="{StaticResource ColorAzulPricipal}" />
                </DataTemplate>
            </sfPopup:SfPopup.FooterTemplate>
        </sfPopup:SfPopup>

        <!--  LOADING INDICATOR  -->
        <ActivityIndicator
            BackgroundColor="Transparent"
            HeightRequest="50"
            HorizontalOptions="Center"
            IsRunning="{Binding IsLoading}"
            IsVisible="{Binding IsLoading}"
            VerticalOptions="Center"
            WidthRequest="50"
            ZIndex="5"
            Color="{StaticResource ColorAzulPricipal}" />

        <!--  FONDO DE LA TARJETA  -->
        <Border
            Grid.Row="0"
            HeightRequest="220"
            Stroke="Transparent"
            StrokeShape="RoundRectangle 20"
            WidthRequest="380">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Offset="0.1" Color="{Binding Tarjeta.ColorHex1}" />
                    <GradientStop Offset="1.0" Color="{Binding Tarjeta.ColorHex2}" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <!--  SEPARACION DE LA TARJETA EN 2 FILAS Y 2 COLUMNAS  -->
        <Grid
            Padding="32,32"
            ColumnDefinitions="70*,30*"
            HeightRequest="220"
            RowDefinitions="70*,30*"
            WidthRequest="380">
            <!--  COLUMNA 0 Y FILA 0  -->
            <Grid
                Grid.Row="0"
                Grid.Column="0"
                HorizontalOptions="Start"
                RowDefinitions="*,*"
                VerticalOptions="Start">
                <HorizontalStackLayout Grid.Row="0">
                    <Label
                        Style="{StaticResource TextoParrafoPrincipal}"
                        Text="{Binding Tarjeta.Nombre}"
                        TextColor="{StaticResource ColorFondoPrincipal}" />
                    <Label
                        Style="{StaticResource TextoParrafoPrincipal}"
                        Text=" - "
                        TextColor="{StaticResource ColorFondoPrincipal}" />
                    <Label
                        Style="{StaticResource TextoParrafoPrincipal}"
                        Text="{Binding Tarjeta.Tipo}"
                        TextColor="{StaticResource ColorFondoPrincipal}" />
                </HorizontalStackLayout>
                <Label
                    Grid.Row="1"
                    Style="{StaticResource TextoMontoTarjeta}"
                    Text="{Binding MontoTarjeta, StringFormat='₡{0:F2}'}"
                    TextColor="{StaticResource ColorFondoPrincipal}" />
            </Grid>
            <!--  COLUMNA 1 Y FILA 0  -->
            <Grid
                Grid.Row="0"
                Grid.Column="1"
                HorizontalOptions="End"
                VerticalOptions="Start">
                <Image
                    HeightRequest="45"
                    Source="{Binding Tarjeta.Logo}"
                    WidthRequest="64" />
            </Grid>
            <!--  COLUMNA 0 Y FILA 1  -->
            <Grid
                Grid.Row="1"
                Grid.Column="0"
                HorizontalOptions="Start"
                RowDefinitions="*,*"
                VerticalOptions="End">
                <Label
                    Grid.Row="0"
                    Style="{StaticResource TextoParrafoPrincipal}"
                    Text="Numero de Tarjeta"
                    TextColor="{StaticResource ColorFondoPrincipal}" />
                <HorizontalStackLayout Grid.Row="1">
                    <Label
                        Style="{StaticResource TextoParrafoPrincipal}"
                        Text="**** **** **** "
                        TextColor="{StaticResource ColorFondoPrincipal}" />
                    <Label
                        Style="{StaticResource TextoParrafoPrincipal}"
                        Text="{Binding Tarjeta.Ultimos4Digitos}"
                        TextColor="{StaticResource ColorFondoPrincipal}" />
                </HorizontalStackLayout>
            </Grid>
            <!--  COLUMNA 1 Y FILA 1  -->
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                HorizontalOptions="End"
                VerticalOptions="End">
                <Label
                    Style="{StaticResource TextoParrafoPrincipal}"
                    Text="{Binding Tarjeta.Vencimiento}"
                    TextColor="{StaticResource ColorFondoPrincipal}" />
            </Grid>
        </Grid>
        <!--  BOTONES DE INFORMACION Y MOVIMIENTOS  -->
        <Grid
            Grid.Row="1"
            Margin="16,0"
            ColumnDefinitions="*,*"
            ColumnSpacing="16">
            <Button
                x:Name="BotonInformacion"
                Grid.Column="0"
                BackgroundColor="{StaticResource ColorAzulPricipal}"
                Clicked="BotonInformacion_Clicked"
                CornerRadius="20"
                FontFamily="PoppinsBold"
                FontSize="16"
                Text="Informacion"
                TextColor="{StaticResource ColorFondoComponentes}"
                VerticalOptions="Center"
                WidthRequest="180" />
            <Button
                x:Name="BotonMovimientos"
                Grid.Column="1"
                BackgroundColor="{StaticResource ColorFondoComponentes}"
                Clicked="BotonMovimientos_Clicked"
                CornerRadius="20"
                FontFamily="PoppinsBold"
                FontSize="16"
                Text="Movimientos"
                TextColor="{StaticResource ColorAzulPricipal}"
                VerticalOptions="Center"
                WidthRequest="180" />
        </Grid>
        <!--  SECCIONES  -->
        <ScrollView Grid.Row="2">
            <Grid
                IsVisible="True"
                RowDefinitions="Auto,Auto, Auto"
                RowSpacing="16">
                <!--  SECCION DE INFORMACION  -->
                <Grid
                    x:Name="SeccionInformacion"
                    Grid.Row="0"
                    Margin="16,0"
                    IsVisible="True"
                    RowDefinitions="Auto,Auto"
                    RowSpacing="16">
                    <!--  DETALLES DEL CREDITO O DEBITO  -->
                    <Border
                        Grid.Row="0"
                        Stroke="{StaticResource Terciario}"
                        StrokeShape="RoundRectangle 20"
                        StrokeThickness="1">
                        <Grid
                            Padding="16"
                            BackgroundColor="{StaticResource ColorFondoComponentes}"
                            RowDefinitions="Auto, Auto, Auto, Auto, Auto"
                            RowSpacing="8">
                            <!--  TITULO DE LA SECCION  -->
                            <Label
                                Grid.Row="0"
                                HorizontalOptions="Center"
                                Style="{StaticResource TextoSubtítulo}"
                                Text="Detalle del Credito"
                                TextColor="{StaticResource ColorTexto}"
                                VerticalOptions="Center" />
                            <!--  LINEA DE DIVISORIA  -->
                            <Border Grid.Row="1" Stroke="{StaticResource Terciario}" />

                            <Grid
                                Grid.Row="2"
                                ColumnDefinitions="*,*"
                                ColumnSpacing="8"
                                HorizontalOptions="Center"
                                VerticalOptions="Center">

                                <VerticalStackLayout
                                    Grid.Column="0"
                                    HorizontalOptions="Center"
                                    Spacing="4"
                                    VerticalOptions="Start">
                                    <!--  LIMITE DE CREDITO O MONTO INICIAL  -->
                                    <Label
                                        Style="{StaticResource TextoSecundario}"
                                        Text="Limite de Credito"
                                        TextColor="{StaticResource Secundario}" />
                                    <Label
                                        Style="{StaticResource TextoEncabezadoSecundario}"
                                        Text="{Binding MontoTarjeta, StringFormat='₡{0:F2}'}"
                                        TextColor="{StaticResource ColorTexto}" />
                                </VerticalStackLayout>
                                <VerticalStackLayout
                                    Grid.Column="1"
                                    HorizontalOptions="Center"
                                    Spacing="4"
                                    VerticalOptions="Start">
                                    <!--  CREDITO USADO PENDIENTE O GASTADO  -->
                                    <Label
                                        Padding="30,0"
                                        Style="{StaticResource TextoSecundario}"
                                        Text="Credito Usado (Pendiente)"
                                        TextColor="{StaticResource Secundario}" />
                                    <Label
                                        HorizontalOptions="Center"
                                        Style="{StaticResource TextoEncabezadoSecundario}"
                                        Text="{Binding Tarjeta.CreditoUsado, StringFormat='₡{0:F2}'}"
                                        TextColor="{StaticResource ColorTexto}" />
                                </VerticalStackLayout>
                            </Grid>

                            <!--  LINEA DE DIVISORIA  -->
                            <Border Grid.Row="3" Stroke="{StaticResource Terciario}" />

                            <VerticalStackLayout
                                Grid.Row="4"
                                Padding="25,0"
                                HorizontalOptions="Start"
                                Spacing="4">
                                <!--  LIMITE DE CREDITO O MONTO INICIAL  -->
                                <Label
                                    HorizontalOptions="Center"
                                    Style="{StaticResource TextoSecundario}"
                                    Text="Credito Disponible"
                                    TextColor="{StaticResource Secundario}" />
                                <Label
                                    HorizontalOptions="Center"
                                    Style="{StaticResource TextoEncabezadoSecundario}"
                                    Text="{Binding CreditoDisponible, StringFormat='₡{0:F2}'}"
                                    TextColor="{StaticResource ColorTexto}" />
                            </VerticalStackLayout>
                        </Grid>
                    </Border>
                    <!--  INFORMACION ADICIONAL  -->
                    <Border
                        Grid.Row="1"
                        Stroke="{StaticResource Terciario}"
                        StrokeShape="RoundRectangle 20"
                        StrokeThickness="1">
                        <Grid
                            Padding="16"
                            BackgroundColor="{StaticResource ColorFondoComponentes}"
                            RowDefinitions="Auto, Auto, Auto, Auto, Auto"
                            RowSpacing="8">
                            <!--  TITULO DE LA SECCION  -->
                            <Label
                                Grid.Row="0"
                                HorizontalOptions="Center"
                                Style="{StaticResource TextoSubtítulo}"
                                Text="Información Adicional"
                                TextColor="{StaticResource ColorTexto}"
                                VerticalOptions="Center" />
                            <!--  LINEA DE DIVISORIA  -->
                            <Border Grid.Row="1" Stroke="{StaticResource Terciario}" />

                            <Grid
                                Grid.Row="2"
                                ColumnDefinitions="24,Auto"
                                ColumnSpacing="8"
                                HorizontalOptions="Start"
                                RowDefinitions="24,Auto"
                                VerticalOptions="Center">
                                <!--  LOGO DE ETIQUETA  -->
                                <Image
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Aspect="AspectFit"
                                    HeightRequest="24"
                                    HorizontalOptions="Start"
                                    Source="icono_etiqueta.svg"
                                    WidthRequest="24" />
                                <!--  TITULO DE LA ETIQUETA  -->
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource TextoSecundario}"
                                    Text="Categoría"
                                    TextColor="{StaticResource Secundario}" />
                                <!--  CATEGORIA  DE TARJETA  -->
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Style="{StaticResource TextoParrafoPrincipal}"
                                    Text="{Binding Tarjeta.Categoria}"
                                    TextColor="{StaticResource ColorTexto}" />
                            </Grid>

                            <!--  LINEA DE DIVISORIA  -->
                            <Border Grid.Row="3" Stroke="{StaticResource Terciario}" />

                            <Grid
                                Grid.Row="4"
                                ColumnDefinitions="24,Auto"
                                ColumnSpacing="8"
                                HorizontalOptions="Start"
                                RowDefinitions="24,Auto"
                                VerticalOptions="Center">
                                <!--  LOGO DE NOTA  -->
                                <Image
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Aspect="AspectFit"
                                    HeightRequest="24"
                                    HorizontalOptions="Start"
                                    Source="icono_nota.svg"
                                    WidthRequest="24" />
                                <!--  TITULO DE LA NOTA  -->
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource TextoSecundario}"
                                    Text="Notas"
                                    TextColor="{StaticResource Secundario}" />
                                <!--  DESCRIPCION  DE TARJETA  -->
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Style="{StaticResource TextoParrafoPrincipal}"
                                    Text="{Binding Tarjeta.Descripcion}"
                                    TextColor="{StaticResource ColorTexto}"
                                    WidthRequest="324" />
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
                <!--  SECCION DE MOVIMIENTOS  -->
                <Grid
                    x:Name="SeccionMovimientos"
                    Grid.Row="0"
                    IsVisible="False">
                    <Label
                        HorizontalOptions="Center"
                        Text="MOVIMIENTOS"
                        TextColor="Black"
                        VerticalOptions="Center" />
                </Grid>
                <!--  BOTON ELIMINAR TARJETA  -->
                <Button
                    x:Name="BotonEliminarTarjeta"
                    Grid.Row="2"
                    BackgroundColor="{StaticResource ColorAcentoRojo}"
                    Command="{Binding EliminarTarjetaCommand}"
                    CornerRadius="20"
                    FontFamily="PoppinsBold"
                    FontSize="16"
                    HeightRequest="42"
                    HorizontalOptions="End"
                    Text="Eliminar Tarjeta"
                    TextColor="{StaticResource ColorFondoComponentes}"
                    VerticalOptions="Center"
                    WidthRequest="182" />
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>